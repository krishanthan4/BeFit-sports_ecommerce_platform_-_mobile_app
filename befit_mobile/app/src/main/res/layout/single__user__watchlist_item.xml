<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/single_user_watchlist_item_card_view"
    android:layout_width="156dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="20dp"
    android:layout_marginBottom="20dp"
    android:background="@drawable/watchlist_deselected_background_outline"
    android:maxHeight="200dp"
    app:cardCornerRadius="10dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/single_user_watchlist_item_product_icon"
                android:layout_width="match_parent"
                android:layout_height="105dp"
                android:background="@drawable/rounded_corners_background"
                android:scaleType="fitCenter" />

            <ImageView
                android:id="@+id/single_user_watchlist_item_toggle_heart"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="end"
                android:backgroundTint="#00000000"
                android:padding="5dp"
                android:src="@drawable/heart_icon"
                app:layout_anchor="@id/single_user_watchlist_item_product_icon" />
        </FrameLayout>

        <TextView
            android:id="@+id/single_user_watchlist_item_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Assassins creed"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/single_user_watchlist_item_product_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="4sp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/single_user_watchlist_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Rs. 400"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/single_user_watchlist_item_star_icon"
                android:layout_width="15dp"
                android:layout_height="15dp"
                app:srcCompat="@drawable/star_icon" />

            <TextView
                android:id="@+id/single_user_watchlist_item_rating"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:gravity="center"
                android:text="4.4"
                android:textSize="13sp" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>