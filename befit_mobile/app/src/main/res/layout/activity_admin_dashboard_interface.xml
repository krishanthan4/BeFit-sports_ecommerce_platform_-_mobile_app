<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/admin_dashboard_interface_navigation_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/watchlist_bg_gradient"
    tools:openDrawer="start">

    <!-- Main Content Container -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/user_main_interface_vertical_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.admin.admin_dashboard_interface">

        <!-- Navigation Rail -->
        <com.google.android.material.navigationrail.NavigationRailView
            android:id="@+id/admin_dashboard_interface_navigation_rail"
            style="@style/App.Custom.Indicator"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            app:headerLayout="@layout/admin_navigation_rail_burger_component"
            app:itemActiveIndicatorStyle="@style/App.Custom.Indicator"
            app:itemHorizontalTranslationEnabled="true"
            app:labelVisibilityMode="unlabeled"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:menu="@menu/admin_dashboard_navigation_rail_menu"
            app:menuGravity="center" />

        <!-- Fragment Container -->
        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/admin_dashboard_interface_fragment_container"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/admin_dashboard_interface_navigation_rail"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Navigation Drawer -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/admin_dashboard_interface_navigation_view"
        style="@style/App.Custom.Indicator"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@drawable/watchlist_bg_gradient"
        app:headerLayout="@layout/admin_navigation_bar_header_component"
        app:itemHorizontalTranslationEnabled="true"
        app:menu="@menu/admin_dashboard_navigation_bar_menu" />

</androidx.drawerlayout.widget.DrawerLayout>