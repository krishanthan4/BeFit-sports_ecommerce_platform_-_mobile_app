<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/spinner_country_inner_item_country_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="Afghanistan"
        app:layout_constraintBottom_toBottomOf="@+id/spinner_country_inner_item_flag_image"
        app:layout_constraintStart_toEndOf="@+id/spinner_country_inner_item_flag_image"
        app:layout_constraintTop_toTopOf="@+id/spinner_country_inner_item_flag_image" />

    <ImageView
        android:id="@+id/spinner_country_inner_item_flag_image"
        android:layout_width="54dp"
        android:layout_height="33dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/country_afghanistan" />

</androidx.constraintlayout.widget.ConstraintLayout>