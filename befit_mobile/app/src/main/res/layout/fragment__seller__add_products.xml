<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_user_seller_add_products_constraint_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:layout_marginBottom="100dp"
    android:background="@drawable/watchlist_bg_gradient"
    tools:context=".ui.fragments.user.seller.seller_add_products_fragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/white"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/fragment_seller_seller_add_products_back_icon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="start"
                    android:padding="15dp"
                    android:src="@drawable/left_icon" />

                <TextView
                    android:id="@+id/fragment_seller_seller_add_products_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Add Products"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </FrameLayout>
        </androidx.appcompat.widget.Toolbar>

        <ScrollView
            android:id="@+id/fragment_seller_add_products_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="80dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:text="Product Category"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <Spinner
                        android:id="@+id/fragment_seller_seller_add_products_product_category_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="48dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:text="Product Brand"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <Spinner
                        android:id="@+id/fragment_seller_seller_add_products_product_brand_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="48dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:text="Product Title"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/PrimaryButtonColor">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/fragment_seller_seller_add_products_product_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Product Title"
                            android:inputType="text"
                            android:minHeight="48dp"
                            android:textColor="@color/PrimaryButtonColor" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:text="Product Model"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <Spinner
                        android:id="@+id/fragment_seller_seller_add_products_product_model_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="48dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:text="Product Condition"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <RadioGroup
                        android:id="@+id/fragment_seller_seller_add_products_product_condition_radio_group"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/fragment_seller_seller_add_products_new_radio_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="16dp"
                            android:text="New" />

                        <RadioButton
                            android:id="@+id/fragment_seller_seller_add_products_old_radio_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Old" />
                    </RadioGroup>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:text="Product Color"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <Spinner
                        android:id="@+id/fragment_seller_seller_add_products_product_color_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="48dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:text="Product Quantity"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/PrimaryButtonColor">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/fragment_seller_seller_add_products_product_quantity"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Product Quantity"
                            android:inputType="number"
                            android:minHeight="48dp"
                            android:textColor="@color/PrimaryButtonColor" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:text="Cost per Item (Rs.)"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/PrimaryButtonColor">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/fragment_seller_seller_add_products_cost_per_item"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="0.00"
                            android:inputType="numberDecimal"
                            android:minHeight="48dp"
                            android:textColor="@color/PrimaryButtonColor" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:text="Standard Delivery Fee (Rs.)"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/PrimaryButtonColor">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/fragment_seller_seller_add_products_standard_delivery_fee"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="0.00"
                            android:inputType="numberDecimal"
                            android:minHeight="48dp"
                            android:textColor="@color/PrimaryButtonColor" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:text="Product Description"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/PrimaryButtonColor">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/fragment_seller_seller_add_products_product_description"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="top|start"
                            android:hint="Enter product description"
                            android:inputType="textMultiLine"
                            android:minHeight="96dp"
                            android:textColor="@color/PrimaryButtonColor" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:text="Upload Product Images"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/fragment_seller_add_products_select_image_1"
                            android:layout_width="0dp"
                            android:layout_height="100dp"
                            android:layout_margin="4dp"
                            android:layout_weight="1"
                            android:background="@drawable/rounded_corners_background"
                            android:scaleType="centerCrop"
                            android:src="@drawable/upload_image_icon" />

                        <ImageView
                            android:id="@+id/fragment_seller_add_products_select_image_2"
                            android:layout_width="0dp"
                            android:layout_height="100dp"
                            android:layout_margin="4dp"
                            android:layout_weight="1"
                            android:background="@drawable/rounded_corners_background"
                            android:scaleType="centerCrop"
                            android:src="@drawable/upload_image_icon" />

                        <ImageView
                            android:id="@+id/fragment_seller_add_products_select_image_3"
                            android:layout_width="0dp"
                            android:layout_height="100dp"
                            android:layout_margin="4dp"
                            android:layout_weight="1"
                            android:background="@drawable/rounded_corners_background"
                            android:scaleType="centerCrop"
                            android:src="@drawable/upload_image_icon" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/fragment_seller_seller_add_products_add_product_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="20dp"
                        android:backgroundTint="#353535"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:text="Add Product"
                        android:textColor="@android:color/white"
                        app:cornerRadius="10dp" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</FrameLayout>