<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/user_home_interface_constraint_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/watchlist_bg_gradient"
    android:paddingTop="25dp">

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/user_home_interface_bottom_navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="#FCFCFC"
        app:itemActiveIndicatorStyle="@style/App.Custom.Indicator"
        app:itemHorizontalTranslationEnabled="true"
        app:itemIconSize="20dp"
        app:itemRippleColor="#707070"
        app:itemTextColor="#707070"
        app:labelVisibilityMode="unlabeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/user_tab_bar_menu" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/user_home_interface_fragment_container_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foregroundGravity="top|center"
        app:defaultNavHost="true"
        app:layout_constraintBottom_toTopOf="@id/user_home_interface_bottom_navigation"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navGraph="@navigation/user_nav_graph" />

</androidx.constraintlayout.widget.ConstraintLayout>