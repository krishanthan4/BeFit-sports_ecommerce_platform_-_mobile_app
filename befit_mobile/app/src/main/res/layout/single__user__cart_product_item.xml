<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/single_user_cart_product_item_main_constraint_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="4dp"
    android:background="@color/white"
    android:elevation="2dp"
    android:orientation="horizontal"
    android:padding="12dp">

    <!-- Hidden TextViews for IDs -->
    <TextView
        android:id="@+id/single_user_cart_product_item_cart_product_id"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/single_user_cart_product_item_cart_product_shipping_fee"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/single_user_cart_product_item_cart_product_delivery_fee"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/single_user_cart_product_item_cart_product_qty"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />

    <!-- Checkbox -->

    <!-- Product Image -->
    <ImageView
        android:id="@+id/single_user_cart_product_item_cart_product_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginEnd="12dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/app_logo" />

    <!-- Product Details Container -->
    <LinearLayout
        android:id="@+id/single_user_cart_product_item_cart_linear_layout_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Product Title -->
        <TextView
            android:id="@+id/single_user_cart_product_item_cart_product_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="#212121"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- Product Description -->
        <TextView
            android:id="@+id/single_user_cart_product_item_cart_product_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="#757575"
            android:textSize="14sp" />

        <!-- Product Price -->
        <TextView
            android:id="@+id/single_user_cart_product_item_cart_product_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="#FF5722"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Bottom Section Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <!-- Rating Section -->
            <LinearLayout
                android:id="@+id/single_user_cart_product_item_cart_linear_layout_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#F5F5F5"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp">

                <ImageView
                    android:id="@+id/single_user_cart_product_item_cart_product_rating_star_icon"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginEnd="4dp"
                    app:srcCompat="@drawable/star_icon"
                    app:tint="#FFC107" />

                <TextView
                    android:id="@+id/single_user_cart_product_item_cart_product_rating_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#212121"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Quantity Section -->
            <LinearLayout
                android:id="@+id/fragment_user_single_product_view_quantity_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:background="#F5F5F5"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quantity:"
                    android:textColor="#757575"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/fragment_user_single_product_view_quantity_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:textColor="#212121"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>